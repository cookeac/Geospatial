                "identifier": {
                    "description": "Provides a system-independent, scheme+ID identifier for the resource.",
                    "anyOf" : [
                        null,
                        {
                          "$ref": "../types/IdentifierType.json"
                        }
                    ],
                    "nullable": true
                },
                "name": {
